{{!< default}}

<section class= 'row'>
  <div class= 'col-xs-12 banner'>
    <img src= '{{@blog.cover}}' />
  </div>
</section>

<section class= 'row'>
  <div class= 'col-xs-12'>
    <div class= 'center-block' style= 'background-image: radial-gradient(#343434, #FFFFFF); padding-top: 1px; padding-bottom: 1px; width: 100%; max-width: 696px;'>
      <div class= 'valign' style= 'width: 100%; height: 100%; background-color: #FFFFFF; padding: 32px;'>
        <img class= 'center-block' style= 'width: 44px; height: 28px;' src= '{{asset "images/barchart.svg"}}' />
        <h3 style= 'text-align: center; margin: 0px;'>All Articles</h3>
      </div>
    </div>
  </div>
  <div class= 'col-xs-12'>
    <div style= 'text-align: center; margin-top: 24px; margin-bottom: 0; margin-right: 28px;'>
      {{pagination}}
    </div>
    <div class= 'content-width center-block'>
        {{#foreach posts}}
          {{> article}}
        {{/foreach}}
    <div style= 'text-align: center; margin-top: 32px; margin-bottom: 32px; margin-right: 28px;'>
      {{pagination}}
    </div>
  </div>
</section>
